{
  "name": "l10n-generator",
  "version": "0.1.0",
  "description": "Generate localization files (Dart ARB, TypeScript) from CSV or Google Sheets",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "formatcheck": "prettier --check \"src/**/*.(js|ts)\"",
    "lint": "eslint . --config eslint.config.js --cache",
    "lint:fix": "eslint . --config eslint.config.js --cache",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:sheets": "./test-sheets.sh",
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm test && pnpm lint",
    "preversion": "pnpm lint",
    "version": "pnpm format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ueki-tomohiro/l10n-generator.git"
  },
  "keywords": [
    "l10n",
    "i18n",
    "localization",
    "internationalization",
    "dart",
    "typescript",
    "arb",
    "google-sheets"
  ],
  "bin": "./lib/cli.js",
  "author": "Tomohiro Ueki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ueki-tomohiro/l10n-generator/issues"
  },
  "homepage": "https://github.com/ueki-tomohiro/l10n-generator#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "csv-parse": "^6.1.0",
    "google-auth-library": "^10.5.0",
    "googleapis": "^171.0.0",
    "js-yaml": "^4.1.1",
    "lodash": "^4.17.23",
    "node-fetch": "^2.7.0",
    "open": "^8.4.2",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.23",
    "@types/node-fetch": "^2.6.13",
    "@types/yargs": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "debug": "^4.4.3",
    "eslint": "^9.39.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "files": [
    "lib/**/*"
  ]
}
