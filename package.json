{
  "name": "l10n-generator",
  "version": "0.0.0",
  "description": "Generate localization files (Dart ARB, TypeScript) from CSV or Google Sheets",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint . --config eslint.config.js --cache",
    "lint:fix": "eslint . --config eslint.config.js --cache",
    "test": "jest --config jest.config.js",
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm test && pnpm lint",
    "preversion": "pnpm lint",
    "version": "pnpm format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ueki-tomohiro/l10n-dart.git"
  },
  "keywords": [
    "l10n",
    "i18n",
    "localization",
    "internationalization",
    "dart",
    "typescript",
    "arb",
    "google-sheets"
  ],
  "bin": {
    "l10n-generator": "./cli.js"
  },
  "author": "Tomohiro Ueki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ueki-tomohiro/l10n-dart/issues"
  },
  "homepage": "https://github.com/ueki-tomohiro/l10n-dart#readme",
  "dependencies": {
    "@types/lodash": "^4",
    "@types/node-fetch": "^2",
    "@types/yargs": "^17.0.19",
    "csv-parse": "^5.3.3",
    "google-auth-library": "^8.7.0",
    "googleapis": "^110",
    "js-yaml": "^4.1.1",
    "lodash": "^4",
    "node-fetch": "^2",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@types/jest": "^29",
    "@types/js-yaml": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "eslint": "^8",
    "eslint-plugin-jest": "^27",
    "eslint-plugin-jsx-a11y": "^6",
    "eslint-plugin-promise": "^6",
    "eslint-plugin-simple-import-sort": "^7",
    "jest": "^29",
    "prettier": "^2",
    "ts-jest": "^29",
    "typescript": "4.9.4"
  },
  "files": [
    "lib/**/*"
  ]
}
