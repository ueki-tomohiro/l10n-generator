{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node10",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "**/test-helpers"]
}
